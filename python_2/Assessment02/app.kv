BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5
            Button:
                text: 'List Required'
                on_press: app.loading()
            Button:
                text: 'List Completed'
                on_press: app.completed()
            Label:
                text: 'Add New Book...'
            Label:
                text: 'Title:'
            TextInput:
                id: input_name
                text: ''
            Label:
                text: 'Author:'
            TextInput:
                id: input_author
                text: ''
            Label:
                text: 'Pages:'
            TextInput:
                id: input_pages
                text: ''
            Button:
                text: 'Add Item'
                on_press: app.handle_add()
            Button:
                text: 'Clear'
                on_press: app.handle_clear()
            Button:
                text: 'Save Item'
                on_press:app.save_item()
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: top_label
                size_hint_y: 0.1
            GridLayout:
                id: entriesBox
                cols: 1
                orientation: 'vertical'
    Label:
        id: status_label
        size_hint_y: 0.1